<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:layout_margin="@dimen/margin_five_dp"
    android:background="@drawable/layout_border">

    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten_dp"
            android:layout_marginTop="@dimen/margin_ten_dp"
            android:fontFamily="casual"
            android:text="@string/profile"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/sienna"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_sixteen_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/user_name"
                android:textColor="@color/stratos"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textSize="30sp"
                android:textColor="@color/sienna" />

            <TextView
                android:id="@+id/userName"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textAllCaps="true"
                android:textColor="@color/sienna"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_sixteen_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/user_email"
                android:gravity="center"
                android:textColor="@color/stratos"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/sienna" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/sienna"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_sixteen_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/user_mobile_number"
                android:gravity="center"
                android:textColor="@color/stratos"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/sienna" />

            <TextView
                android:id="@+id/userMobileNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/sienna"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_sixteen_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/no_of_donations"
                android:gravity="center"
                android:textColor="@color/stratos"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/sienna" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/number_of_donations"
                android:textSize="18sp"
                android:textColor="@color/sienna"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_sixteen_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/no_of_deliveries"
                android:gravity="center"
                android:textColor="@color/stratos"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/sienna" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/number_of_deliveries"
                android:textSize="18sp"
                android:textColor="@color/sienna"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/organizations"
            android:layout_margin="@dimen/margin_sixteen_dp"
            android:textColor="@color/sienna"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/stratos"
            android:textAlignment="viewStart"
            android:layout_margin="@dimen/margin_sixteen_dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_organization"
            android:textSize="18sp"
            android:textColor="@color/sienna"
            android:textAlignment="viewStart"
            android:layout_margin="@dimen/margin_sixteen_dp" />

        <Spinner
            android:id="@+id/organization_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_sixteen_dp"
            android:layout_marginLeft="@dimen/margin_sixteen_dp"
            android:layout_marginRight="@dimen/margin_sixteen_dp"
            android:background="@drawable/edit_text_border" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:layout_marginBottom="@dimen/margin_sixteen_dp"
            android:id="@+id/submitButton"
            android:padding="3dp"
            android:text="@string/submit"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:visibility="invisible"/>

</RelativeLayout>
